# SliTaz package receipt.

PACKAGE="ftp-config"
VERSION="1.0"
CATEGORY="configuration"
SHORT_DESC="File transport protocol configuration"
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://tiny.slitaz.org/"
DEPENDS="base-tiny"

post_install()
{
	grep -q ftpd $1/etc/rcS.conf ||
	sed -i 's/^RUN_DAEMONS="/&ftpd /' $1/etc/rcS.conf
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/etc
}
