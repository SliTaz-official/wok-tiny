# SliTaz package receipt.

PACKAGE="fr"
VERSION="1.0"
CATEGORY="tiny-slitaz"
SHORT_DESC="FR keyboard and locales"
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://mirror.slitaz.org/pizza/tiny/"
DEPENDS="base-tiny"

# Rules to configure and make the package.
compile_rules()
{
	mkdir -p fs/etc
	echo "Europe/Paris" > fs/etc/TZ
	echo "fr-latin1" > fs/etc/keymap.conf
	cat > fs/etc/locale.conf <<EOT
LANG=fr_FR
LC_ALL=fr_FR
EOT
	while read pkg file ; do
		if [ ! -s $pkg*/fs$file ]; then
			tazpkg get $pkg
			tazpkg extract $pkg*.tazpkg
		fi
		mkdir -p fs$(dirname $file)
		mv $pkg*/fs$file fs$(dirname $file) || return 1
	done << EOT
kbd-busybox	/usr/share/kmap/fr-latin1.kmap
EOT
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a fs/. $fs
}
