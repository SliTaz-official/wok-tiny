# SliTaz package receipt.

PACKAGE="module-vfat"
VERSION="2.6.37"
CATEGORY="base-system"
SHORT_DESC="Kernel module for the vfat filesystem"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://tiny.slitaz.org/"
WANTED="kernel-modular"
CONFIG_FILES="/etc/filesystems"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	local path
	path=lib/modules/$VERSION-slitaz/kernel
	mkdir -p $fs/$path $fs/etc
	export src=$WOK/$WANTED/linux-$VERSION
	export _pkg=$src/_pkg
	$src/slitaz/list_modules.sh fs/fat | while read module; do
		dir=$path/$(dirname $module)
		[ -d $fs/$dir ] || mkdir -p $fs/$dir
		cp -a $_pkg/$path/$module $fs/$dir
	done
	touch $fs/etc/filesystems
}

# Post install/remove commands for Tazpkg.
post_install()
{
	for i in vfat fat msdos ; do
		grep -qs ^$i$ $1/etc/filesystems || \
			echo "$i" >> $1/etc/filesystems
	done
	chroot "$1/" depmod -a $VERSION-slitaz
}
