# SliTaz package receipt.

PACKAGE="ctorrent-dnh"
VERSION="3.3.2"
CATEGORY="network"
SHORT_DESC="Command line Bittorrent client."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
[ -n "$TARGET" ] || TARGET="i486"
DEPENDS="busybox-net libc++ libm libgcc_s"
BUILD_DEPENDS="uclibc-cross-compiler-$TARGET"
TARBALL="${PACKAGE}$VERSION.tar.gz"
WEB_SITE="http://www.rahul.net/dholmes/ctorrent/"
WGET_URL="$SF_MIRROR/dtorrent/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		--with-ssl=no \
		--host=$TARGET-pc-linux-gnu \
		CXX=uclibc-$TARGET-c++ \
		CC=uclibc-$TARGET-cc &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
