+void fill_rgb_conv(int mode, struct rgb_conv *s)
+{
+	int bits;
+
+	bits = mode & 0xF;  mode >>= 4;
+	s->rshl = s->gshl = bits;
+	s->bskp = 8 - bits; s->bmax = (1 << bits) -1;
+	bits = mode & 0xF;  mode >>= 4;
+	s->rshl += bits; s->bshr = bits;
+	s->gskp = 8 - bits; s->gmax = (1 << bits) -1;
+	bits = mode & 0xF;
+	s->bshr += s->gshr = bits;
+	s->rskp = 8 - bits; s->rmax = (1 << bits) -1;
+}
