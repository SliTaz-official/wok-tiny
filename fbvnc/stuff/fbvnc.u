-	case 0x0565:
-		return ((r >> 3) << 11) | ((g >> 2) << 5) | (b >> 3);
-	case 0x0233:
-		return ((r >> 6) << 6) | ((g >> 5) << 3) | (b >> 5);
-	}
+	static struct rgb_conv c;
+	
+	if (c.rshl == 0)
+		fill_rgb_conv(fb_mode(), &c);
+	return ((r >> c.rskp) << c.rshl) | ((g >> c.gskp) << c.gshl) 
+					 | (b >> c.bskp);
 }
